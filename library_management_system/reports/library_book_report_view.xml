<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="book_report_form" model="ir.ui.view">
        <field name="name">Book Reports</field>
        <field name="model">book.issue.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="book_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_pdf" type="object" string="Print" class="oe_highlight" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="book_issue_report_action" model="ir.actions.act_window">
        <field name="name">Book Issue Report</field>
        <field name="res_model">book.issue.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>