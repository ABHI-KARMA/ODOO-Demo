<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_membership_card" model="report.paperformat">
        <field name="name">Custom Paper Format</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">79</field>
        <field name="page_width">52</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">1</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_membership_card" model="ir.actions.report">
        <field name="name">Membership Card</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library_management_system.template_membership_card</field>
        <field name="report_file">library_management_system.template_membership_card</field>
        <field name="print_report_name">'Membership - %s' % (object.name)</field>
        <field name="binding_model_id" ref="library_management_system.model_library_membership" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="library_management_system.paperformat_membership_card" />
    </record>
    <template id="template_membership_card">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <div style="border:1px solid blue; border-radius:2px; width:542px; height:337px; text-align:center; position:relative;left:-11px;">
                        <h2 style="background-color:#64c3d9;color:white;">Library Membership Card</h2>
                        <div style="position:relative;left:18px;top:48px">
                            <div style='position:relative;right:165px; bottom:17px'>
                                <t t-if="o.image_1920">
                                    <t t-esc="o.image_1920" widget="image" t-options='{"widget": "image"}' />
                                </t>
                                <t t-else="" />
                            </div>
                            <div style="font-size:14px; position:relative;top:-149px; left:63px;">
                                <p style="position:relative;left:-62px;">Name:
                                    <t t-esc="o.name" />
                                </p>
                                <p style="position:relative;left:-64px;">Mobile:
                                    <t t-esc="o.mobile" />
                                </p>
                                <t t-if="o.membership">
                                    <p style="position:relative;left:-12px;">Membership:
                                        <t t-esc="o.membership" />
                                    </p>
                                </t>
                                <t t-else="">
                                    <p style="position:relative;left:-12px;">Membership: Not A Member</p>
                                </t>
                                <p style="position:relative;left:-25px;">Membership Expired:
                                    <t t-esc="o.membership_exp_date" />
                                </p>
                            </div>
                            <div style="position:relative;bottom:138px;right:164px;">
                                <p style="font-size:12px;">Signature</p>
                            </div>
                            <div style="position:relative;top:-106px; left:-18px; width:100%">
                                <h2 style="background-color:#64c3d9;color:white; border-radius:-1px">
                                    <t t-esc="o.company_id.name" />
                                </h2>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>